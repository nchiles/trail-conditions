<% include partials/header %>

<!-- <p class="is">Is</p> -->

<div class="select">
	<div class="select-show-list">
		<span>
			<span class="selected">MERRELL</span>
			<span class="carat"><i class="fa fa-caret-down"></i></span>
		</span>
	</div>
	<ul class="select-list">
		<li><div class="select-option"><a class="nostyle" href="/wahlfield">wahlfield</a></div></li>
		<li><div class="select-option"><a class="nostyle" href="/merrell">merrell</a></div></li>
		<li><div class="select-option"><a class="nostyle" href="/luton">luton park</a></div></li>
		<li><div class="select-option"><a class="nostyle" href="/">cannonsburg ski area</a></div></li>
		<li><div class="select-option"><a class="nostyle" href="/">egypt valley</a></div></li>
		<li><div class="select-option"><a class="nostyle" href="/">ken-o-sha</a></div></li>
	</ul>
</div>

<!-- <p class="open">Rideable?</p> -->

<img class="progress" src="/assets/images/gray-spinner.gif">
<div class="loading">Gathering weather data<span>.</span><span>.</span><span>.</span></div>

<!-- FROZEN -->
<% if (
		(thisMonthNumber <= 4 || thisMonthNumber >= 11) 
		&& minTempFinal <= 25 
		&& (maxTempFinal <= 25 || maxTempSum <= 77)
	) { %>  
   	<div class="result">Frozen</div>
   	<div class="result-description">
   		<%= frozen %>
   	</div>
   	<br>
	<br>
	<a class="today-total-button">More Info...</a>
	<div class="more-info">
		<div><span class="conditions">Recent Conditions</span></div>
		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day High/Low: <%= parseFloat(maxTempFinal).toFixed(0) %>/<%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>

<!-- FREEZE/THAW -->
<% } else if (
		(thisMonthNumber <= 4 || thisMonthNumber >= 10) 
		&& minTempFinal <= 25 
		&& (maxTempFinal >= 26 || maxTempSum >= 78)
	) { %>
   	<div class="result">Freeze/Thaw</div>
   	<div class="result-description">
   		<%= freezeThaw %>
   	</div>	
   	<br>
	<br>
	<a class="today-total-button">More Info...</a>
   	<div class="more-info">
   		<div><span class="conditions">Recent Conditions</span></div>
   		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day High/Low: <%= parseFloat(maxTempFinal).toFixed(0) %>/<%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>

<!-- MUDDY -->
<% } else if (
		minTempFinal >= 26 
		&& (maxTempFinal >= 30 || maxTempSum >= 78)
		&& (merrell24hrRainfall >= .75 || merrell3DayRainfall >= 1.5)
	) { %>  
	<div class="result">Muddy</div>
	<div class="result-description">
   		<%= muddy %>
   	</div>
	
	<br>
	<br>
	<a class="today-total-button">More Info...</a>
   	<div class="more-info">
   		<div><span class="conditions">Recent Conditions</span></div>
   		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day High/Low: <%= parseFloat(maxTempFinal).toFixed(0) %>/<%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>

<!-- QUESTIONABLE -->
<% } else if (
		minTempFinal >= 26 
		&& (maxTempFinal >= 80 || maxTempSum >= 225)
		&& (merrell24hrRainfall >= .75 || merrell3DayRainfall >= 1.5)
	) { %>
	<div class="result">Questionable</div>
	<div class="result-description">
   		<%= questionable %>
   	</div>
	
	<br>
	<br>
	<a class="today-total-button">More Info...</a>
   	<div class="more-info">
   		<div><span class="conditions">Recent Conditions</span></div>
   		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day High/Low: <%= parseFloat(maxTempFinal).toFixed(0) %>/<%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>

<!-- DRY -->
<% } else if (
		(thisMonthNumber >= 5 || thisMonthNumber <= 9) 
		&& minTempFinal >= 26 
		&& (maxTempFinal >= 26 || maxTempSum >= 150)
		&& merrell24hrRainfall <= .74 
		&& merrell3DayRainfall <= 1.49
	) { %>
	<div class="result">Dry</div>
   	<div class="result-description">
   		<%= dry %>
   	</div>	
	<br>
	<br>
	<a class="today-total-button">More Info...</a>
   	<div class="more-info">
   		<div><span class="conditions">Recent Conditions</span></div>
   		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day High/Low: <%= parseFloat(maxTempFinal).toFixed(0) %>/<%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>

<% } else { %>
	<div class="result">Data Out of Range.</div>
	<a class="today-total-button">More Info...</a>
	<div class="more-info">
		<div>Check with <a href="http://wmmba.org/">the WMMBA</a> for more info.</div>
		<br>
		<div><span class="conditions">Recent Conditions</span></div>
   		<div>24hr Rainfall: <%= parseFloat(merrell24hrRainfall).toFixed(2) %>"</div>	
		<div>3 Day Rainfall: <%= parseFloat(merrell3DayRainfall).toFixed(2) %>"</div>
		<div>3 Day Low: <%= parseFloat(minTempFinal).toFixed(0) %>&#8457;</div>
		<div>3 Day High: <%= parseFloat(maxTempFinal).toFixed(0) %>&#8457;</div>
		<br>
		<div><span class="conditions">Current Conditions</span></div>
		<div><%= dat.toLocaleString() %></div>
		<div><%= parseFloat(merrellCurrentTemp).toFixed(0) %>&#8457; <%= merrellCurrentCond %></div>
		<div>Feels Like: <%= parseFloat(merrellCurrentFeelsLike).toFixed(0) %>&#8457;</div>
		<div>Wind: <%= merrellCurrentWind %></div>
	</div>
<% } %>

<% include partials/footer %>